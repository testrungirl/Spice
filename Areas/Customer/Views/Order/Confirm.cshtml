@model Spice.Models.ViewModels.OrderDetailsVM
@{
    ViewData["Title"] = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<div class="backgroundWhite">
    <div class="row px-3">
        <h2 class="text-info">Order Confirmed</h2>
    </div>
    <div class="col-4 text-right">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success form-control">Now Order</a>
    </div>
    @if(Model.OrderHeader != null)
    {
        <div style="color: maroon" class="p-3">
            Your order has been approved! Please see the order summary below.
            <br/>
            Feel free to contact us if you have any questions.
        </div>
        <partial name="_IndividualOrderDetails" model="Model" />
    }
    else
    {
        <div class="text-danger"> Error... Please try again.</div>
    }
</div>

