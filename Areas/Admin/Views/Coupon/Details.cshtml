
@model Spice.Models.Coupon
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Coupon Details</h2>
<br />
<div class=" row backgroundWhiteBorder">

    <br />
    <div class="col-8">
        <input hidden asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name" class="custom-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" class="form-control" readonly/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="CouponType" class="custom-label"></label>
            </div>
            <div class="col-8">
                <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control" disabled></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Discount" class="custom-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Discount" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="MinimumAmount" class="custom-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="MinimumAmount" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="isActive" class="custom-label"></label>
            </div>
            <div class="col-8">
                <input type="checkbox" disabled asp-for="isActive" class="form-control" />
            </div>
        </div>

    </div>
    <div class="col-3 offset-1">
        @{
            if (Model.Picture != null)
            {
                var base64 = Convert.ToBase64String(Model.Picture);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                <img src="@imgsrc" height="100%" width="100%" alt="no_picture" />
            }

        }
    </div>
    <div class="col-8">
        <div class="col-8 offset-4">
            <partial name="_DetailsAndBackToListButton" model="Model.Id" />
        </div>
    </div>
</div>
